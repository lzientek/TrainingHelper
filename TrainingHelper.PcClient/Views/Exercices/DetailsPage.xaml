<Page x:Class="TrainingHelper.PcClient.Views.Exercices.DetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingHelper.PcClient.Views.Exercices"
      xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
      mc:Ignorable="d" 
      DataContext="{Binding Source={StaticResource Locator},Path=ExerciseDetails}"
      Title="OverviewPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Exercise.Name}"></TextBlock>
        <Button Grid.Row="1" Command="{Binding GoToOverviewCommand}">Go back to overview</Button>
    </Grid>
</Page>
