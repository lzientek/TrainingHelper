<UserControl x:Class="TrainingHelper.PcClient.Views.User.FullUserUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainingHelper.PcClient.Views.User"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator},Path=Main.ConnectedUser}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Path=Pseudo}"></TextBlock>
            <TextBlock Text="{Binding Path=BirthDate}"></TextBlock>
            <TextBlock Text="{Binding Path=LastName}"></TextBlock>
            <TextBlock Text="{Binding Path=FirstName}"></TextBlock>
            <TextBlock Text="{Binding Path=Id}"></TextBlock>
            <TextBlock Text="{Binding Path=LastConnection}"></TextBlock>
            <TextBlock Text="{Binding Path=CreationDate}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
