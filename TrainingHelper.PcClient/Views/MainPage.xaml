<Page x:Class="TrainingHelper.PcClient.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingHelper.PcClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      DataContext="{Binding Source={StaticResource Locator},Path=Main}">

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Path=ConnectedUser.Pseudo}"></TextBlock>
            <TextBlock Text="{Binding Path=ConnectedUser.BirthDate}"></TextBlock>
            <TextBlock Text="{Binding Path=ConnectedUser.LastName}"></TextBlock>
            <TextBlock Text="{Binding Path=ConnectedUser.FirstName}"></TextBlock>
            <TextBlock Text="{Binding Path=ConnectedUser.Id}"></TextBlock>
            <TextBlock Text="{Binding Path=ConnectedUser.LastConnection}"></TextBlock>
            <TextBlock Text="{Binding Path=ConnectedUser.CreationDate}"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
